    <script src="js/jquery-2.1.3.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>
    <script type="text/javascript">
        var text1 = ["Welcome to True Visitor!!", "Planning an Event or Exhibition?"];
        var text2 = ["Secure Your Premises with TrueVisitor", "Give your Visitors a Royal Welcome with TrueVisitor!"];
        var images = ["secure.jpg", "e12.jpg"];

        $(function () {
            var i = 0;
            $("#home").css("background-image", "url(images/" + images[i] + ")");
            $("#t1").text(text1[i]);
            $("#t2").text(text2[i]);

            setInterval(function () {
                i++;
                if (i == images.length) {
                    i = 0;
                }
                $("#home").fadeOut("slow", function () {
                    $(this).css("background-image", "url(images/" + images[i] + ")");
                    $("#t1").text(text1[i]);
                    $("#t2").text(text2[i]);
                    $(this).fadeIn("slow");

                });

            }, 6000);
        });
    </script>

    <script type="text/javascript">


function htmlEncode (value){
  return $('<div/>').text(value).html();
}

$(function() {
  $("#generate").click(function() {
    $(".qr-code").attr("src", "https://chart.googleapis.com/chart?cht=qr&chl=" + htmlEncode($("#content").val()) + "&chs=160x160&chld=L|0");
  });
});


    </script>


